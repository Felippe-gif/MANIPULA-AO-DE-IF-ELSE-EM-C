#include <stdio.h>
#define texto "=== CATEGORIA DE IDADE ==="
int main(){
	printf("%s \n", texto);
	
	int idade;
	printf("Digite sua idade:\n");
	scanf("%d",&idade);
	
	if(idade >= 0 && idade <= 12){
		printf("CRIANÃ‡A \n");
	}else if(idade >= 13 && idade <= 17){
		printf("ADOLESCENTE \n");
	}else if (idade >= 18 && idade <= 59){
		printf("ADULTO \n");
	}else{
		printf("IDOSO \n");
		
	}
}
